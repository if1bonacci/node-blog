<% layout('layout') -%>
<div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-7">
            <div class="row">
                <nav class="navbar navbar-light bg-light">
                    <div class="container-fluid">
                        <a href="/user" class="btn btn-info">Back to list</a>
                    </div>
                </nav>
                <table class="table">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Avatar</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td><%= user['id'] %></td>
                        <td><%= user['firstName'] %></td>
                        <td><%= user['lastName'] %></td>
                        <td><%= user['email'] %></td>
                        <td><img src="/user/avatar/<%= user['avatar'] %>" alt="<%= user['firstName'] %>"></td>
                    </tr>
                    </tbody>
                </table>
            </div>
            <div class="row">
                <form action="/user/<%= user['id'] %>/upload-avatar" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="avatar" class="form-label">Choose avatar</label>
                        <input class="form-control" type="file" id="formFile" name="avatar">
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>
