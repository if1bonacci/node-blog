{% extends 'layout.twig' %}

{% block body %}
    <h1>{{title}}</h1>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Email</th>
            <th scope="col">Age</th>
            <th scope="col">Avatar</th>
        </tr>
        </thead>
        <tbody>
        {% for key, user in users %}
            <tr>
                <th scope="row">{{ key + 1 }}</th>
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.age }}</td>
                <td>
                    {% if user.avatar %}
                        {{ user.avatar }}
                    {% else %}
                        <a href="/user/{{ user.id }}/upload-avatar">upload</a>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
